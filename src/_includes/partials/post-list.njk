    
    
    
    
<div class="grid grid-cols-12">


    <div class="col-span-12 lg:col-span-9">

        <div class="grid grid-cols-12">

            {% for item in postListItems %}

            <div class="col-span-12 lg:col-span-6 xl:col-span-4 lg:pr-8 h-auto lg:h-128">

                

                <div class="h-vsm w-full bg-gray-200 dark:bg-gray-600 "></div>
            
                

                <div class="pt-8 pb-1">
                    <a href="{{ item.url }}" class="pb-2 pt-2">
                        <picture class="w-full h-60 flex justify-center items-center overflow-hidden hover:opacity-80">
                            <img
                                src="{{ item.data.coverimage}}"
                                alt="{{ item.data.coverimagealt}}"
                                loading="lazy"
                                class="flex-shrink-0 min-w-full min-h-full"
                            />
                        </picture>
                    </a>
                </div>



                <div class="flex flex-row space-x-1 pt-4 pb-4">

                    <div class="">
                        <p class="text-sm font-OpenSauceSans font-bold text-gray-500 dark:text-gray-300">{{ item.date | readableDate }}</p>
                    </div>

                    <div class="">
                        <p class="text-sm  font-OpenSauceSans font-bold text-gray-500 dark:text-gray-300">/</p>
                    </div>

                    <div class="flex flex-row space-x-1">
                        {% for tag in item.data.tags | filterTagList %}

                        {%- if collections.tagList.indexOf(tag) != -1 -%}
                            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                            <a href="{{ tagUrl | url }}" class="text-sm font-OpenSauceSans border-b border-blue-500 text-gray-500 hover:text-fred hover:font-italic dark:hover:text-fgreen dark:text-gray-300">{{ tag }}</a>
                            {% if loop.length - loop.index == 1 %} <p class="text-sm  font-OpenSauceSans text-gray-500 dark:text-gray-300">â€¢</p> {% endif %}
                            {%- if loop.length - loop.index > 1 %}   {% endif -%}
                        {%- endif -%}

                        {% endfor %}
                    </div>
                    

                </div>



                <div class="pb-2 ">
                    <a href="{{ item.url }}" class="pb-2 pt-2 text-lg font-bold tracking-tight leading-4 font-OpenSauceSans text-gray-800 dark:text-gray-100 hover:text-fred dark:hover:text-fgreen md:text-xl">{{ item.data.title }}</a>
                </div>
                <div class="">
                    <p class="pb-2 pt-2 text-sm  font-OpenSauceSans text-gray-700 dark:text-gray-200">{{ item.data.subtext }}</p>
                </div>

            </div>
            
            {% endfor %}
            
        </div>

    </div>

    <div class="col-span-12 lg:col-span-3">


    </div>
    
</div>