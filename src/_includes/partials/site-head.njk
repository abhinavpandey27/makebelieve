<!-- add navigation and stuff-->

<div x-data="{navbarOpen: false}" class="max-w-full mx-auto my-auto dark:bg-bgblue-dark">

<div class="max-w-8xl mx-auto py-4 md:py-8 xl:py-12 px-4 lg:px-12 xl:px-12 2xl:px-2">

    <header class="flex  max-w-8xl mx-auto justify-between items-start ">

    <a href='/'
    class="text-xl md:text-2xl text-gray-800 dark:text-gray-100 font-OpenSauceSans tracking-tight font-bold">
    Abhinav Pandey
    </a>

    <nav>
    <button class="md:hidden" @click="navbarOpen = !navbarOpen">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 fill-current text-gray-800 dark:text-gray-100" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>

    </button>

    {% set navPages = collections.all | eleventyNavigation %}
    <ul class="fixed left-0 right-0 min-h-screen bg-gray-100 dark:bg-bgblue top-16 space-y-4 p-4 transform translate-x-0 transition duration-500
                md:relative md:flex md:min-h-0 md:space-y-0 md:space-x-6 md:p-0 md:top-auto md:translate-y-0 md:dark:bg-bgblue-dark"
                :class="{'translate-x-full': !navbarOpen, 'translate-x-0': navbarOpen,}">
    {% for entry in navPages %}
    <li{% if entry.url == page.url %} class="text-red-500"{% else %} class="text-gray-100"{% endif %}>
        <a href="{{ entry.url | url }}">{{ entry.title }}</a>
    </li>
    {% endfor %}
    </ul>

    </nav>


    </header>


</div>



</div> 